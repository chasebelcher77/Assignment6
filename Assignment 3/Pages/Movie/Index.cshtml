@page
@model Assignment_3.Pages.Movie.IndexModel

<h1>Movie List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Movie Image</th>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Price</th>
            <th>Rating</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movie)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(movie.Image))
                    {
                        <img src="@movie.Image" width="75" height="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@movie.Title</td>
                <td>@movie.ReleaseDate.ToShortDateString()</td>
                <td>@movie.Genre</td>
                <td>@movie.Price.ToString("C")</td>
                <td>@movie.Rating</td>
                <td>
                    
                    <a asp-page="./Edit" asp-route-id="@movie.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@movie.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@movie.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
