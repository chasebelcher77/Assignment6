@page
@model DetailsModel
namespace Assignment_3.Pages

@if (Model.Movie != null)
{
    <div class="container mt-5">
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@Model.Movie.Image" class="img-fluid rounded-start" alt="@Model.Movie.Title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title">@Model.Movie.Title</h3>
                        <p class="card-text"><strong>Price:</strong> $@Model.Movie.Price</p>
                        <p class="card-text"><strong>Release Date:</strong> @Model.Movie.ReleaseDate.ToShortDateString()</p>
                        <p class="card-text"><strong>Genre:</strong> @Model.Movie.Genre</p>
                        <p class="card-text"><strong>Rating:</strong> @Model.Movie.Rating/10</p>
                        <a class="btn btn-secondary" asp-page="/Index">Back</a>
                        <button class="btn btn-success">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Movie not found.</p>
}